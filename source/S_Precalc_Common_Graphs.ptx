              tvals=[-2,-1,0,1/2,5/3]
              plot11+=parametric_plot3d(((t^2+1)/2,t-2,0),(t,-3,3),color="black")
              plot11+=parametric_plot3d(((t^2+1)/2,t-2,s),(t,-3,3),(s,-scale,scale),color="blue",opacity=0.5)
              for s in tvals:
                  plot11+=point3d(((s^2+1)/2,s-2,0),color="blue",size=20)
                  plot11+=line([((s^2+1)/2,s-2,scale),((s^2+1)/2,s-2,-scale)],color="green")
