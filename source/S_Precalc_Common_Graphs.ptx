              tvals=[-2,-1,0,1/2,5/3]
              plot11+=parametric_plot3d((t^2/2+1,t-2,0),(t,-3,3),color="black",axes=True,axes_labels=["$x$","$y$"],gridlines=True)
              plot11+=parametric_plot3d((t^2/2+1,t-2,s),(t,-3,3),(s,-scale,scale),color="blue",opacity=0.5)
              for s in tvals:
                  plot11+=point3d((s^2/2+1,s-2,0),color="blue",size=20)
                  plot11+=line([(s^2/2+1,s-2,scale),(s^2/2+1,s-2,-scale)],color="green")
              show(plot11,aspect_ratio=1,viewpoint=[[-0.5886,-0.4206,-0.6904],91.97],camera_position=[23.2203,-6.099,11.1604])
