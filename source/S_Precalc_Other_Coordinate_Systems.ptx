            plot26+=parametric_plot3d((cos(t)*sin(s),sin(t)*sin(s),cos(s)),(s,pi/4,pi),(t,0,pi),color="gray",opacity=.55)
            plot26+=parametric_plot3d((2*cos(t)*sin(s),2*sin(t)*sin(s),2*cos(s)),(s,pi/4,pi),(t,0,pi),color="yellow",opacity=.35)
